<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleStyle"
        android:background="#55d"
        android:textSize="22sp"
        android:text="安全防盗 - 设置导航"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:padding="6dp"
        android:text="您的手机防盗卫生:"
        android:textSize="18sp"
        />

    <com.rya.ryamobilesafe.view.Setup1SafeItemView xmlns:safe_setup1="http://schemas.android.com/apk/res/com.rya.ryamobilesafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        safe_setup1:safe_setup1_des="SIM卡变更报警"
        />
    <com.rya.ryamobilesafe.view.Setup1SafeItemView xmlns:safe_setup1="http://schemas.android.com/apk/res/com.rya.ryamobilesafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        safe_setup1:safe_setup1_des="GPS追踪"
        />
    <com.rya.ryamobilesafe.view.Setup1SafeItemView xmlns:safe_setup1="http://schemas.android.com/apk/res/com.rya.ryamobilesafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        safe_setup1:safe_setup1_des="远程数据销毁"
        />
    <com.rya.ryamobilesafe.view.Setup1SafeItemView xmlns:safe_setup1="http://schemas.android.com/apk/res/com.rya.ryamobilesafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        safe_setup1:safe_setup1_des="远程锁屏"
        />

</LinearLayout>