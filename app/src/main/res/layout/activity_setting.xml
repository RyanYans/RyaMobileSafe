    <!--自定义组合控件-->
    <com.rya.ryamobilesafe.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/res/com.rya.ryamobilesafe"
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        mobilesafe:item_title="自动更新设置"
        mobilesafe:item_des="自动检测更新" />

    <com.rya.ryamobilesafe.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/res/com.rya.ryamobilesafe"
